extends ../layout/main

block variables
 - var title = 'Salt'
 - var bodyClass = 'index'
block content
  main
    h1.visually-hidden Salt
    section.index__head.main-head
      .main-head__container
        .main-head__slider-block
          .main-head__slider.swiper-container.js-slider.js-slider--main
            .main-head__pagination
            .main-head__slider-wrapper.swiper-wrapper 
              .main-head__slide.swiper-slide.main-head-slide
                .container.container--medium.main-head-slide__container 
                  .main-head-slide__info
                    p.main-head-slide__title Device Authentication
                    p.main-head-slide__description SALT Group is a world leader in authentication and security. We have a range of services to improve user authentication. Discover the possibilities with SALT.
                    a.main-head-slide__btn.btn(href="") GET STARTED
                  .main-head-slide__img-wrap
                    img.main-head-slide__img(src="/images/icon/twitter.svg", width="148" alt="Twitter logo")
              .main-head__slide.swiper-slide.main-head-slide
                .container.container--medium.main-head-slide__container 
                  .main-head-slide__info
                    p.main-head-slide__title Device Authentication2
                    p.main-head-slide__description SALT Group is a world leader in authentication and security. We have a range of services to improve user authentication. Discover the possibilities with SALT.
                    a.main-head-slide__btn.btn(href="") GET STARTED
                  .main-head-slide__img-wrap
                    img.main-head-slide__img(src="/images/icon/twitter.svg", width="148" alt="Twitter logo")
              .main-head__slide.swiper-slide.main-head-slide
                .container.container--medium.main-head-slide__container 
                  .main-head-slide__info
                    p.main-head-slide__title Device Authentication3
                    p.main-head-slide__description SALT Group is a world leader in authentication and security. We have a range of services to improve user authentication. Discover the possibilities with SALT.
                    a.main-head-slide__btn.btn(href="") GET STARTED
                  .main-head-slide__img-wrap
                    img.main-head-slide__img(src="/images/icon/twitter.svg", width="148" alt="Twitter logo")
        .main-head__find-more-block 
          p.main-head__find-more-title Find out more 
          a.main-head__find-more.js-smoothscroll(href="#find-out-more" data-scroll)

    section.index__find-out-more.find-out-more#find-out-more
      h2.visually-hidden Find out more
      .container.container--small.find-out-more__container
        ul.find-out-more__list
          li.find-out-more__item
            p.find-out-more__value 126,300
            p.find-out-more__title Identity Theft Cases Reported  in Australia
          li.find-out-more__item
            p.find-out-more__value $20.1bn
            p.find-out-more__title Online Transactions per  annum by Australians
          li.find-out-more__item
            p.find-out-more__value 45,511
            p.find-out-more__title Online Fraud Cases Reported in Australia
    section.index__what-we-do.what-we-do
      .container.container--small.what-we-do__container 
        h2.what-we-do__title What We Do
        ul.what-we-do__list
          li.what-we-do__item
            .what-we-do__item-img-wrap
              picture
                source(srcset="/images/content/device.webp" type="image/webp")
                img.what-we-do__item-img(src="/images/content/device.png", alt="Device Authentication")
            p.what-we-do__item-title Device Authentication
            p.what-we-do__item-description Hardware-based device fingerprinting resilient to cloning, malware and device jailbreak/root. Hardware-level control over the displayed UI independent of the device operating system. Hardware-level data protection.
          li.what-we-do__item
            .what-we-do__item-img-wrap
              picture
                source(srcset="/images/content/authentication.webp" type="image/webp")
                img.what-we-do__item-img(src="/images/content/authentication.png", alt="")
            p.what-we-do__item-title User Authentication
            p.what-we-do__item-description Verify the identity of users for access control with contemporary biometric connected MFA security tokens.
          li.what-we-do__item
            .what-we-do__item-img-wrap
              picture
                source(srcset="/images/content/transaction.webp" type="image/webp")
                img.what-we-do__item-img(src="/images/content/transaction.png", alt="")
            p.what-we-do__item-title Transaction Authentication
            p.what-we-do__item-description High assurance out-of-band authentication of high impact transactions and instructions initiated through electronic service delivery channels. Audit trail of verification for non-repudiation. Fraud protection against man-in-the-middle and browser malware.
          li.what-we-do__item
            .what-we-do__item-img-wrap
              picture
                source(srcset="/images/content/maze.webp" type="image/webp")
                img.what-we-do__item-img(src="/images/content/maze.png", alt="")
            p.what-we-do__item-title Contemporary authentication methods
            p.what-we-do__item-description Echidna authentication server to enable adaptive risk-based approach to security through a range of methods for different levels of authentication assurance from SMS OTPs, Challenge/Response, to more contemporary QR code signing and advanced connected mobile security tokens capable of transaction signatures with dynamic linking of the transaction context and addition of PIN, Fingerprint and other biometrics.
          li.what-we-do__item
            .what-we-do__item-img-wrap
              picture
                source(srcset="/images/content/disk.webp" type="image/webp")
                img.what-we-do__item-img(src="/images/content/disk.png", alt="")
            p.what-we-do__item-title HSM Solutions
            p.what-we-do__item-description Reseller of Thales nShield HSMs with professional services and subject matter expertise in HSMs, key ceremony procedures, and SEE code development. 
          li.what-we-do__item
            .what-we-do__item-img-wrap
              picture
                source(srcset="/images/content/cloud.webp" type="image/webp")
                img.what-we-do__item-img(src="/images/content/cloud.png", alt="")
            p.what-we-do__item-title Cloud & IoT Security
            p.what-we-do__item-description Secure the identity and access of users, devices and Internet of Things connecting into the cloud. Support cloud adoption and migration of applications and data into private and public clouds.
    section.index__product-spotlight.product-spotlight
      .container.container--big.product-spotlight__container
        .product-spotlight__info
          h2.product-spotlight__title Product Spotlight
          p.product-spotlight__description Salt mSign Connected Token is a contemporary mobile security 2FA token for authentication of user identity and verification of transactions independent of the delivery channel that initiated the request.
          a.product-spotlight__more.btn.btn--middle(href="") MORE INFO
        .product-spotlight__video.video.js-lightgallery(data-src="")
          a.video__link(href="https://www.youtube.com/watch?v=QH2-TGUlwu4")
          .video__bg(style="background-image: url('/images/content/video-bg.png');")
          .video__play-icon
            img(src="/images/icon/play-button.svg", width="85" height="85" alt="Play video")
          .video__content
            p.video__category FEATURE VIDEO 
            p.video__name mSign Connected token
    section.index__contact-us.contact-us
      .container.container--medium.contact-us__container
        h2.contact-us__title Ready to get started?
        a.contact-us__btn.btn(href="") CONTACT US